<script is:inline>
    const theme = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme-storage')) {
        return JSON.parse(localStorage.getItem('theme-storage')).state.isDark ? 'dark' : 'light';
      }
      return 'light';
    })();
    
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  </script>