---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm';
---

<style>
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .background-mosaic {
    background-image: url('/images/logo_sie.png');
    background-size: 50px 50px; /* Tamaño de cada imagen en el mosaico */
    background-repeat: repeat;
    transform: rotate(45deg); /* Rotar la imagen 45 grados */
    transform-origin: center;
    width: 300%;
    height: 300%;
    position: fixed;
    top: -50%;
    left: -50%;
    z-index: -1; /* Asegúrate de que el fondo esté detrás del contenido */
  }

  .content {
    z-index: 1; /* Asegúrate de que el contenido esté encima del fondo */
  }
</style>

<Layout title="Login">
  <div class="background-mosaic"></div>
  <div class="content bg-custom-primary p-8 rounded-lg shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold text-custom-text mb-6 text-center">Sistema de Asistencia</h1>
    <LoginForm client:load />
  </div>
</Layout>